jQuery(function(){
	var stack = {
		delay: 5000,
		actions:[],
		run: function() {
			if (stack.actions.length) {
				stack.actions.shift()();
		    setTimeout(stack.run, stack.delay);
		  }
		}
	};

	$("#slideshow li").each(function(index){
		var that = this;
		stack.actions.push(function(){
			$(that).show("slide", { direction: "left" }, 500);
			
			if (index-1 != -1){
				$($("#slideshow li")[index-1]).hide("slide", { direction: "left" }, 500);
			}
		//	$(that).show("slow");
		});
	});
	
	$($("#slideshow li")[0]).show();
	stack.run();
});
